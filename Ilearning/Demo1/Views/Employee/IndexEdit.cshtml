@model List<Employee>
@{
    ViewData["Title"] = "IndexEdit";
    Layout = "_AdvancedLayout1";
}

<h1>IndexEdit</h1>

<table class="table table-bordered table-hover">
   
    @foreach (var i in Model)
    {
        <tr>
            <td>@i.Name</td>
            <td><a href="/Employee/Edit/@i.ID">Edit</a></td>
            <td><img width="50px" height="50px" class="card-img-top" src="/images/@i.Image" alt="Card image"> </td>
            <td><a href="/Employee/Delete/@i.ID" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a></td>
        </tr>
    }
</table>

