@model Demo1.Models.Departement

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="card my-4">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title">@Model.Name</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Manager:</dt>
                <dd class="col-sm-9">@Model.Manager</dd>
            </dl>
        </div>
    </div>

    <div class="card my-4">
        <div class="card-header bg-success text-white">
            <h5 class="card-title">Trainees</h5>
        </div>
        <div class="card-body">
            @if (Model.traniees != null && Model.traniees.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Degree</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var trainee in Model.traniees)
                        {
                            <tr>
                                <td>@trainee.Name</td>
                                <td>@trainee.Address</td>
                                <td>@trainee.Degree</td>
                                <td>@trainee.Grade</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No trainees available.</p>
            }
        </div>
    </div>

    <div class="card my-4">
        <div class="card-header bg-info text-white">
            <h5 class="card-title">Courses</h5>
        </div>
        <div class="card-body">
            @if (Model.Course != null && Model.Course.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Degree</th>
                            <th>Min Degree</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.Course)
                        {
                            <tr>
                                <td>@course.Name</td>
                                <td>@course.Degree</td>
                                <td>@course.Mindegree</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No courses available.</p>
            }
        </div>
    </div>

    <div class="card my-4">
        <div class="card-header bg-warning text-white">
            <h5 class="card-title">Instructors</h5>
        </div>
        <div class="card-body">
            @if (Model.Instractor != null && Model.Instractor.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Salary</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var instructor in Model.Instractor)
                        {
                            <tr>
                                <td>@instructor.Name</td>
                                <td>@instructor.Salary</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No instructors available.</p>
            }
        </div>
    </div>
</div>
