@model Demo1.Models.CrsResult

@{
    ViewData["Title"] = "Create New Course Result";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center text-info">Fill in the details to create a new course result.</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Degree" class="control-label font-weight-bold"></label>
                    <input asp-for="Degree" class="form-control" placeholder="Enter Degree" />
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Traniee_id" class="control-label font-weight-bold"></label>
                    <input asp-for="Traniee_id" class="form-control" placeholder="Enter Trainee ID" />
                    <span asp-validation-for="Traniee_id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="crs_id" class="control-label font-weight-bold"></label>
                    <input asp-for="crs_id" class="form-control" placeholder="Enter Course ID" />
                    <span asp-validation-for="crs_id" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
</div>
