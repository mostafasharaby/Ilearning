@model Demo1.Models.CrsResult

@{
    ViewData["Title"] = "Delete Course Result";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center text-warning">Are you sure you want to delete this course result?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Degree)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Degree)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Traniee_id)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Traniee_id)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.crs_id)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.crs_id)
                </dd>
            </dl>
            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" /> |
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </form>
        </div>
    </div>
</div>
