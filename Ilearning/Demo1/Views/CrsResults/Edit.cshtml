@model Demo1.Models.CrsResult

@{
    ViewData["Title"] = "Edit Course Result";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Course Result</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Degree" class="control-label font-weight-bold"></label>
                            <input asp-for="Degree" class="form-control" />
                            <span asp-validation-for="Degree" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Traniee_id" class="control-label font-weight-bold"></label>
                            <input asp-for="Traniee_id" class="form-control" />
                            <span asp-validation-for="Traniee_id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="crs_id" class="control-label font-weight-bold"></label>
                            <input asp-for="crs_id" class="form-control" />
                            <span asp-validation-for="crs_id" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
